<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.video.mapper.UserMapper">

    <update id="addBalance" parameterType="java.lang.String">
        update t_user set  balance = balance + #{chargeAmount} where id  = #{userId}
    </update>

</mapper>